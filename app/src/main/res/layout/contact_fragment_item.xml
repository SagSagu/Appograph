<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:elevation="10dp"
    android:background="#2ecc71"
    android:id="@+id/relative_layout">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/icon_edit"
        android:id="@+id/ivEdit"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/icon_save"
        android:id="@+id/ivSave"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTACT"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvTitle"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_below="@id/tvTitle"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:id="@+id/llContactPhone">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_call"
                    android:layout_gravity="center"
                    android:id="@+id/ivPhone"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHONE"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:backgroundTint="@android:color/transparent"
                    android:id="@+id/etPhone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_below="@+id/llContactPhone"
                android:id="@+id/llContactAlternatePhone">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_call"
                    android:layout_gravity="center"
                    android:id="@+id/ivAlternatePhone"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Alternate phone number"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:backgroundTint="@android:color/transparent"
                    android:id="@+id/etAlternatePhone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="5dp"
                android:layout_below="@+id/llContactAlternatePhone"
                android:id="@+id/llContactWhatsApp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_whats_app"
                    android:layout_gravity="center"
                    android:id="@+id/ivWhatsApp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WhatsApp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:backgroundTint="@android:color/transparent"
                    android:id="@+id/etWhatsApp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="5dp"
                android:layout_below="@+id/llContactWhatsApp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_mail"
                    android:layout_gravity="center"
                    android:id="@+id/ivEmail"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EMAIL"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:backgroundTint="@android:color/transparent"
                    android:id="@+id/etEmail"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>