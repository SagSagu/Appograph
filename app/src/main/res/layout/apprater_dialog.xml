<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/grey">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Appograph"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvRateTitle"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvRateTitle"
        android:layout_marginTop="3dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rating_message"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvRateTitle"
        android:id="@+id/tvRateMessage"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRateMessage"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No, thanks"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentStart="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/tvNoThanks"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Later"
            android:textColor="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/tvRemindMeLater"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate now"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/tvRateNow"/>

    </RelativeLayout>

</RelativeLayout>